<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilMascota"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bot"
    app:cardCornerRadius="@dimen/roundCornerCV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgCVMascotaPerfil"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:src="@drawable/icon616660" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tvRatingPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvrating"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imgHuesoAmarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icons8_hueso_amarillo_100" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>